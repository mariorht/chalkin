# =============================================
# Chalkin - Environment Variables
# =============================================
# Copy this file to .env and update values
# 
# For DEVELOPMENT: All values have sensible defaults
# For PRODUCTION: SECRET_KEY is REQUIRED!

# ---------------------------------------------
# App Settings
# ---------------------------------------------
APP_NAME=Chalkin
APP_VERSION=0.1.0

# Set to false in production
DEBUG=true

# ---------------------------------------------
# Database Configuration
# ---------------------------------------------
# SQLite (default)
DATABASE_URL=sqlite:///./chalkin.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/chalkin

# ---------------------------------------------
# JWT Authentication
# ---------------------------------------------
# CRITICAL: Generate a secure key for production!
# Run: openssl rand -hex 32
SECRET_KEY=dev-secret-key-change-in-production

# Algorithm for JWT encoding
ALGORITHM=HS256

# Token expiration in minutes (default: 10080 = 1 week)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ---------------------------------------------
# File Uploads (future feature)
# ---------------------------------------------
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# ---------------------------------------------
# Web Push (VAPID)
# ---------------------------------------------
# Generate with:
# python - <<'PY'
# from pywebpush import generate_vapid_keypair
# pub, priv = generate_vapid_keypair()
# print("VAPID_PUBLIC_KEY=", pub)
# print("VAPID_PRIVATE_KEY=", priv)
# PY
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:support@example.com
